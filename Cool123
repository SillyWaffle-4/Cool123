<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flying Chickens Everywhere!</title>
    <style>
        body {
            /* Set a background color/image */
            background-color: skyblue;
            /* Hide scrollbars */
            overflow: hidden;
            /* Ensure full-screen coverage */
            margin: 0;
            height: 100vh;
            width: 100vw;
            /* Make the body the container for positioning */
            position: relative;
        }

        .chicken {
            /* Position absolutely so we can move them freely */
            position: absolute;
            /* Size of the chicken image */
            width: 80px;
            height: 80px;
            /* Ensure the chicken is on top of the background */
            z-index: 10;
            /* The image source (You'll need to replace this with a real chicken image URL) */
            background-image: url('https://i.imgur.com/your-chicken-image.png'); /* **REPLACE THIS** */
            background-size: contain;
            background-repeat: no-repeat;
            /* Initial position (will be set by JS) */
            top: 50%;
            left: 50%;
            /* Smooth transition for movement */
            transition: all 5s linear;
            cursor: pointer;
        }

        /* Fallback for when no image is loaded - shows text */
        .chicken::before {
            content: 'üêî'; /* A simple chicken emoji */
            font-size: 60px;
            position: absolute;
            top: 0;
            left: 0;
        }
    </style>
</head>
<body>

    <script>
        const NUMBER_OF_CHICKENS = 15; // How many chickens you want
        const moveInterval = 5000; // Time in milliseconds between each move (5 seconds)

        /**
         * Generates a random number within a given range.
         * @param {number} min - The minimum value.
         * @param {number} max - The maximum value.
         * @returns {number} The random number.
         */
        function getRandomNumber(min, max) {
            return Math.random() * (max - min) + min;
        }

        /**
         * Sets a new random position for a single chicken element.
         * @param {HTMLElement} chicken - The chicken element to move.
         */
        function setRandomPosition(chicken) {
            // Get screen dimensions minus the chicken's size (80px)
            const newTop = getRandomNumber(0, window.innerHeight - 80);
            const newLeft = getRandomNumber(0, window.innerWidth - 80);

            // Apply the new position
            chicken.style.top = `${newTop}px`;
            chicken.style.left = `${newLeft}px`;
        }

        /**
         * Creates a new chicken element and adds it to the body.
         * @returns {HTMLElement} The newly created chicken element.
         */
        function createChicken() {
            const chicken = document.createElement('div');
            chicken.classList.add('chicken');
            document.body.appendChild(chicken);
            setRandomPosition(chicken); // Set initial position
            return chicken;
        }

        // --- Main Execution ---

        // 1. Create all the chickens
        const chickens = [];
        for (let i = 0; i < NUMBER_OF_CHICKENS; i++) {
            chickens.push(createChicken());
        }

        // 2. Start the continuous movement loop
        function flyChickens() {
            chickens.forEach(chicken => {
                setRandomPosition(chicken);
            });
        }

        // Move them instantly the first time
        flyChickens(); 

        // Then, set an interval to move them every 'moveInterval' milliseconds
        setInterval(flyChickens, moveInterval); 
    </script>
</body>
</html>
